generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  clerk_id      String?  @unique
  username      String?  @unique
  email         String   @unique
  fullName      String?
  phoneNumber   String?
  avatarUrl     String?
  createdAt     DateTime?
  updatedAt     DateTime?
}

model FeedBack {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  clerk_id      String 
  author        String 
  avatar        String?
  role          String
  content       String
  createdAt     DateTime  @default(now())
}

model Template {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  clerk_id      String 
  htmlJson      String
}
